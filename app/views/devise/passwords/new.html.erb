<% provide :page_title, 'Reset password' %>

<div class="user-form">
  <div class="user-form__header">
    <h2 class="user-form__header__title">Forgot your password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'user-form__body') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-field">
      <%= f.label :email, class: 'form-field__label' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.submit "Reset", class: 'button button--green' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
