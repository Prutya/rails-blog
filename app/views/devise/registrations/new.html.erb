<% provide :page_title, 'Sign up' %>

<div class="user-form">
  <div class="user-form__header">
    <h2 class="user-form__header__title">Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'user-form__body') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-field">
      <%= f.label :email, class: 'form-field__label' %>
      <%= f.email_field :email, autofocus: true, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <label class="form-field__label">
        <%= User.human_attribute_name(:password) %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> characters minimum)
        <% end %>
      </label>
      <%= f.password_field :password, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, class: 'form-field__label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :first_name, class: 'form-field__label' %>
      <%= f.text_field :first_name, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :last_name, class: 'form-field__label' %>
      <%= f.text_field :last_name, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.submit "Sign up", class: 'button button--green' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
