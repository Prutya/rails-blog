<div class="user-form">
  <div class="user-form__header">
    <h2 class="user-form__header__title">Edit <%= resource_name.to_s.humanize %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class:'user-form__body') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-field">
      <%= f.label :email, class: 'form-field__text-input' %>
      <%= f.email_field :email, autofocus: true, class: 'form-field__text-input' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-field">
      <label class="form-field__label">
        <%= User.human_attribute_name(:password) %>
        (leave blank if you don't want to change it)
      </label>
      <% if @minimum_password_length %>
        <label class="form-field__label">
          (<%= @minimum_password_length %> characters minimum)
        </label>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, class: 'form-field__text-input' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <label class="form-field__label">
        <%= User.human_attribute_name(:current_password) %> (we need your current password to confirm your changes)
      </label>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :first_name, class: 'form-field__label' %>
      <%= f.text_field :first_name, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.label :last_name, class: 'form-field__label' %>
      <%= f.text_field :last_name, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <%= f.submit "Update", class:'button button--green' %>
    </div>
  <% end %>
</div>
