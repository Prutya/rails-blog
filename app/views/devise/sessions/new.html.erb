<% provide :page_title, 'Sign in' %>

<div class="user-form">
  <div class="user-form__header">
    <h2 class="user-form__header__title">Sign in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'user-form__body') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-field">
      <%= f.label :email, class: 'form-field__label' %>
      <%= f.email_field :email, autofocus: true, class: 'form-field__text-input' %>
    </div>

    <div class="form-field">
      <label class="form-field__label">
        <%= User.human_attribute_name(:password) %>
      </label>
      <%= f.password_field :password, autocomplete: "off", class: 'form-field__text-input' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'form-field__label' %>
      </div>
    <% end -%>

    <div class="form-field">
      <%= f.submit "Sign in", class: 'button button--green' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
