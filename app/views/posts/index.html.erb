<section class="feed">
  <div class="feed__header">
  </div>
  <div class="feed__posts">
    <% @posts.each do |post| %>
    <div class="post">
      <%= link_to(post_url(post.id), class: 'post__header') do %>
        <h3 class="post__header__title"><%= post.title %></h3>
      <% end %>
      <div class="post__body">
        <p class="post__body__text post__body__text--truncate"><%= post.body %></p>
      </div>
      <div class="post__footer">
        <%= link_to(post_url(post.id), class: 'post__footer__number post__footer__number--comments') do %>
          5
        <% end %>
        <span class="post__footer__time"><%= post.user.full_name %> (<%= post.created_at %>)</span>
      </div>
    </div>
    <% end %>
  </div>
</section>

<li><%= link_to 'Sign out', destroy_user_session_url, method: :delete %></li>
