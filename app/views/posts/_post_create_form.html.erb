<%= form_for(:post, url: posts_url, html: { method: :post, class: 'post-form' }) do |f| %>
  <div class="post-form__header">
    <h2 class="post-form__header__title">Write a post</h2>
  </div>
  <div class="post-form__body">
    <div class="form-field">
      <%= f.label :title, class: 'form-field__label' %>
      <%= f.text_field :title, autofocus: true, class: 'form-field__text-input' %>
    </div>
    <div class="form-field">
      <%= f.text_area :body, class: 'form-field__text-area', rows: 5 %>
    </div>
    <div class="form-field">
      <%= f.submit "Submit", class: 'button button--green' %>
    </div>
  </div>
<% end %>
