<% provide :page_title, @post.title %>

<section class="post">
  <a class="post__header">
    <h3 class="post__header__title"><%= @post.title %></h3>
  </a>
  <div class="post__body">
    <p class="post__body__text"><%= @post.body %></p>
  </div>
  <div class="post__footer">
    <span class="post__footer__number post__footer__number--comments">
      <%= @post.comments.length %>
    </span>
    <%= image_tag @post.user.avatar.thumb.url, class: 'post__footer__image', alt: @post.user.full_name %>
    <span class="post__footer__time"><%= @post.user.full_name %> (<%= @post.created_at %>)</span>
  </div>
</section>

<section class="comments">
  <%= form_for(:comment, url: post_comments_url(@post.id), html: { method: :post, class: 'comment-form' }) do |f| %>
    <div class="comment-form__header">
      <h3 class="comment-form__header__title">New comment</h3>
    </div>
    <div class="comment-form__body">
      <div class="form-field">
        <%= f.text_area :body, autofocus: true, class: 'form-field__text-area', rows: 5 %>
      </div>
      <div class="form-field">
        <%= f.submit "Submit", class: 'button button--green' %>
      </div>
    </div>
    <div class="comment-form__footer">
    </div>
  <% end %>

  <% @post.comments.each do |comment| %>
    <div class="comment">
      <div class="comment__body">
        <p class="comment__body__text">
          <%= comment.body %>
        </p>
      </div>
      <div class="comment__footer">
        <%= image_tag comment.user.avatar.thumb.url, class: 'comment__footer__image', alt: comment.user.full_name %>
        <span class="comment__footer__time"><%= comment.user.full_name %> (<%= comment.created_at %>)</span>
      </div>
    </div>
  <% end %>
</section>
