<% provide :page_title,   @post.title %>
<% provide :page_heading, @post.title %>

<%= render partial: 'post', locals: { post: @post, has_link: false, async_delete: false, truncate_text: false } %>

<%= render partial: 'comments/comment_create_form', locals: { post_id: @post.id, parent: nil } %>

<%= render partial: 'comments/comments', locals: { comments: @post.comments.paginate(page: params[:page]) } %>
