<div class="posts">
  <% if posts.any? %>
    <% posts.each do |post| %>
      <%= render partial: 'post', locals: { post: post, has_link: true, async_delete: true } %>
    <% end %>

    <%= will_paginate posts %>
  <% else %>
    <span class="posts__empty">No posts yet :(</span>
  <% end %>
</div>
